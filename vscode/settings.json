{
  "workbench.sideBar.location": "left",

  // ミニマップは非表示
  "editor.minimap.enabled": false,
  // vimの設定
  // jjでノーマルモードに入る
  "vim.insertModeKeyBindings": [
      {
          "before": ["j","j"],
          "after": ["<Esc>"]
      }
  ],
  "vim.visualstar": true,
  "vim.hlsearch": true,
  "vim.easymotion": true,
  "vim.useCtrlKeys": true,
  "vim.useSystemClipboard": true,
  "vim.statusBarColorControl": false,
  "vim.normalModeKeyBindingsNonRecursive": [
    // ノーマルモードのときにxキー、sキーで削除した文字をヤンクしない
    {
      "before": [ "x" ],
      "after": [ "\"", "_", "x" ]
    },
    {
      "before": [ "s" ],
      "after": [ "\"", "_", "s" ]
    },
    {"before":["<leader>","h"],"after":["<C-w>","h"]},
    {"before":["<leader>","j"],"after":["<C-w>","j"]},
    {"before":["<leader>","k"],"after":["<C-w>","k"]},
    {"before":["<leader>","l"],"after":["<C-w>","l"]},
    // 前のタブを表示
    // { "before": ["C-h"], "commands": [ "workbench.action.previousEditor" ] },
    // 次のタブを表示
    // { "before": ["C-l"], "commands": [ "workbench.action.nextEditor" ] },
  ],
  // "editor.quickSuggestions": false,
  // "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?_-、。「」【】『』（）！？　てにをはがのともへでや",

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  "[js]": {
      "editor.tabSize": 2
  },
  "[vue]": {
      "editor.tabSize": 2
  },
  "[ruby]": {
      "editor.tabSize": 2
  },
  "[php]": {
      "editor.tabSize": 4
  },
  "ruby.intellisense": "rubyLocate",
  "ruby.codeCompletion": "rcodetools",
  "ruby.lint": {
      "ruby": true
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "workbench.colorTheme": "Night Owl (No Italics)",
  "php.validate.executablePath": "",
  "editor.tabCompletion": "on",
  "editor.detectIndentation": false,
  "alignment.chars": {
    ":": {
      "spaceBefore": 0,
      "spaceAfter": 1
    },
    "::": {
      "spaceBefore": 0,
      "spaceAfter": 0
    },
    "=": {
      "spaceBefore": 1,
      "spaceAfter": 1
    },
    "===": {
      "spaceBefore": 1,
      "spaceAfter": 1
    },
    "==": {
      "spaceBefore": 1,
      "spaceAfter": 1
    },
    "=>": {
      "spaceBefore": 1,
      "spaceAfter": 1
    },
    "+=": {
      "spaceBefore": 1,
      "spaceAfter": 1
    },
    "-=": {
      "spaceBefore": 1,
      "spaceAfter": 1
    },
    "*=": {
      "spaceBefore": 1,
      "spaceAfter": 1
    },
    "/=": {
      "spaceBefore": 1,
      "spaceAfter": 1
    }
  },
  "extensions.ignoreRecommendations": true,
  "editor.cursorStyle": "line",
  "editor.lineNumbers": "on",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "editor.tabSize": 2,
  "workbench.editor.enablePreview": false,
  "git.autofetch": true,
  "workbench.startupEditor": "none",
}
