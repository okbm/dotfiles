[color]
    diff = auto
    status = auto
    branch = auto
    grep = auto
    color = auto
    ui = auto
[core]
    excludesfile = ~/.gitignore
    editor = vim
[push]
    default = current
[alias]
    st = status
    co = checkout
    ci = commit -v
    cm = commit -m
    di = diff
    br = branch
    puhs = push
    psuh = push
    pus = push
    puh = push
    pl = !git pull && git submodule update --init
    pr = pull --rebase
    undo = reset --soft HEAD^
    clear = reset --hard HEAD

    today = log --oneline --since='12 hour ago'
    graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
    #log = log --pretty=format:\"%h %C(yellow)%ad%C(reset) | %s%C(red)%d%C(reset) %C(blue)[%an]%C(reset)\" --date=iso
    list = log --pretty=format:\"%h %C(yellow)%ad%C(reset) | %s%C(red)%d%C(reset) %C(blue)[%an]%C(reset)\" --date=iso
    pl = !git pull && git submodule update --init
    brr = browse-remote
    see = browse
    week = log --oneline --since=1.week --author=okbm --no-merges  --decorate
    clean-marged = branch --merged | grep -v '^*' | xargs git branch -d
    mypr = !hub browse -- pulls/$(git config user.name)
[user]
    name = okbm
    email = freezemoon.s@gmail.com
[github]
    user = okbm
[web]
    browser = google-chrome
[browse-remote "github.com"]
    top = https://{host}/{path}
    ref = https://{host}/{path}/tree/{short_ref}
    rev = https://{host}/{path}/commit/{commit}
[ghq]
    root = ~/.ghq
    root = ~/.go/src
[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true
[ghi]
    token = !security find-internet-password -a okbm -s github.com -l 'ghi token' -w
[credential]
    helper = osxkeychain
